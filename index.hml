                margin: 10px auto;
                max-width: 300px;
            }

            .section-title {
                font-size: 2em;
            }

            .features-grid,
            .platform-grid,
            .themes-grid,
            .privacy-grid {
                grid-template-columns: 1fr;
            }
        }

        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .feature-card,
        .platform-item,
        .theme-card,
        .privacy-item {
            animation: fadeInUp 0.6s ease-out;
        }
    </style>
</head>
